\setbeamercolor{headline}{fg=title,bg=header}
\setbeamercolor{footline}{fg=title, bg=background}
\setbeamerfont{footline}{size=\large,series=\tt}
\setbeamercolor{separation line}{bg=author}
\setbeamercolor{title in headline}{fg=title}
\setbeamercolor{author in headline}{fg=author}
\setbeamercolor{institute in headline}{fg=institute}

\setbeamercolor{framesubtitle}{fg=institute, bg=blocktitlebackground}
\setbeamercolor{author in head/foot}{fg=author, bg=header}
\setbeamercolor{title in head/foot}{fg=author, bg=header}

\setbeamercolor*{normal text}{fg=blockoutline, bg=background}
\setbeamercolor*{block body}{bg=blockbackground,fg=black}
\setbeamercolor*{block title}{fg=blocktitle,bg=blocktitlebackground}
\setbeamerfont{block title}{size=\large,series=\bf}
\setbeamercolor{upper separation line head}{fg=author}

\setbeamercolor*{example body}{fg=blockbackground,bg=black}
\setbeamercolor*{example text}{fg=blockbackground,bg=black}
\setbeamercolor*{example title}{bg=blocktitle,fg=blocktitlebackground}

\setbeamercolor{alerted text}{fg=background}

%\setbeamercolor{example text}{fg=blocktitle}
\setbeamercolor{structure}{fg=bullet}

\setbeamertemplate{itemize items}[triangle]
\setbeamertemplate{navigation symbols}{}  % no navigation on a 

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{block begin}{
  \vskip.75ex
  \begin{beamercolorbox}[rounded=true,shadow=true,leftskip=1cm,colsep*=.75ex]{block title}%
    \usebeamerfont*{block title}\insertblocktitle
  \end{beamercolorbox}%
  {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5pt}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[rounded=true,shadow=true,colsep*=.75ex,sep=.75ex,vmode]{block body}%
    \ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
  }
  \setbeamertemplate{block end}{
  \end{beamercolorbox}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{headline}{  
  \leavevmode

  \begin{beamercolorbox}[wd=\paperwidth]{headline}
    \begin{columns}[T]
      \begin{column}{0.25\paperwidth}
      \end{column}
      \begin{column}{0.5\paperwidth}
        \vskip4ex
        \centering
        \usebeamercolor{title in headline}{\color{fg}\textbf{\LARGE{\inserttitle}}\\[2ex]}
        \usebeamercolor{author in headline}{\color{fg}\large{\insertauthor}\\[0ex]}
        \usebeamercolor{institute in headline}{\color{fg}\large{\insertinstitute}\\[1ex]}     
      \end{column}
      \begin{column}{0.25\paperwidth}
      \end{column}
    \end{columns}
    \vskip1cm
  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{2pt}
  \end{beamercolorbox}
}

